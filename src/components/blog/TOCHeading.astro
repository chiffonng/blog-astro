---
import { type TocItem } from '@/plugins/toc'

interface Props {
  heading: TocItem
}

const {
  heading: { depth, slug, subheadings, text }
} = Astro.props
---

<li>
  <div class='relative'>
    <span
      class='absolute top-[5%] w-[2px] transition-colors duration-300 [&.highlight-bg]:bg-primary [&.is-read]:bg-input'
      aria-hidden='true'></span>
    <a
      aria-label={`Jump to section: ${text}`}
      class:list={['toc-item', `toc-depth-${depth}`]}
      href={`#${slug}`}>{text}</a
    >
  </div>
  {
    !!subheadings.length && (
      <ol class='toc-list-reset'>
        {subheadings.map((subheading: TocItem) => (
          <Astro.self heading={subheading} />
        ))}
      </ol>
    )
  }
</li>

<style>
  li {
    width: 100%;
    overflow: hidden;
  }

  /* TOC depth variables */
  :root {
    --toc-indent-base: 0.5rem;
    --toc-indent-2: 0.5rem;
    --toc-indent-3: 1.5rem;
    --toc-indent-4: 2.5rem;
  }

  /* Text wrapping and ellipsis for TOC items (max 2 lines) */
  .toc-item {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    line-height: 1.4;
    word-break: break-word;
    white-space: normal;
    hyphens: auto;
    padding: 0.25rem 0.75rem;
    margin-inline-start: var(--toc-indent-base);
    font-size: 0.875rem;
    color: hsl(var(--foreground) / 0.75);
    transition: all 0.2s ease;
    min-height: 44px; /* Minimum touch target */
    display: flex;
    align-items: center;
  }

  .toc-item:hover {
    color: hsl(var(--foreground));
  }

  .toc-item.highlight {
    font-weight: 500;
    color: hsl(var(--primary));
  }

  .toc-item.is-read {
    color: hsl(var(--input));
  }

  .toc-item.highlight-bg-translucent {
    background-color: hsl(var(--muted));
  }

  /* Depth-specific indentation */
  .toc-depth-2 {
    padding-inline-start: var(--toc-indent-2);
  }

  .toc-depth-3 {
    padding-inline-start: var(--toc-indent-3);
  }

  .toc-depth-4 {
    padding-inline-start: var(--toc-indent-4);
  }

  /* Override the highlight box rounding - make it less rounded */
  .toc-item.rounded-t-2xl {
    border-top-left-radius: 0.375rem !important; /* rounded-md instead of rounded-2xl */
    border-top-right-radius: 0.375rem !important;
  }

  .toc-item.rounded-b-2xl {
    border-bottom-left-radius: 0.375rem !important; /* rounded-md instead of rounded-2xl */
    border-bottom-right-radius: 0.375rem !important;
  }

  /* Use shared TOC list reset class */
  ol {
    @apply toc-list-reset;
  }
  /* Accessibility enhancements */
  .toc-item:focus {
    outline: 2px solid hsl(var(--primary));
    outline-offset: 2px;
    background-color: hsl(var(--muted) / 0.5);
  }

  .toc-item:focus-visible {
    outline: 2px solid hsl(var(--primary));
    outline-offset: 2px;
  }

  /* Ensure sufficient contrast for touch targets */
  @media (hover: none) and (pointer: coarse) {
    .toc-item {
      min-height: 48px; /* Larger touch target on touch devices */
      font-size: 1rem; /* Slightly larger font on mobile */
    }
  }
</style>
