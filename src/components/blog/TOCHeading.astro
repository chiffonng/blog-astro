---
import { type TocItem } from '@/plugins/toc'

interface Props {
  heading: TocItem
}

const {
  heading: { depth, slug, subheadings, text }
} = Astro.props
---

<li>
  <div class='relative'>
    <span
      class='absolute top-[5%] w-[2px] transition-colors duration-300 [&.highlight-bg]:bg-primary [&.is-read]:bg-input'
      aria-hidden='true'></span>
    <a
      aria-label={`Jump to section: ${text}`}
      class:list={[
        'toc-item px-3 py-1 ms-2 text-sm text-foreground/75 transition-all hover:text-foreground [&.highlight]:font-medium [&.highlight]:text-primary [&.is-read]:text-input [&.highlight-bg-translucent]:bg-muted',
        depth === 2 && 'ps-2',
        depth === 3 && 'ps-6',
        depth === 4 && 'ps-10'
      ]}
      href={`#${slug}`}>{text}</a
    >
  </div>
  {
    !!subheadings.length && (
      <ol>
        {subheadings.map((subheading: TocItem) => (
          <Astro.self heading={subheading} />
        ))}
      </ol>
    )
  }
</li>

<style>
  li {
    width: 100%;
    overflow: hidden;
  }

  /* Text wrapping and ellipsis for TOC items (max 2 lines) */
  .toc-item {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    line-height: 1.4;
    word-break: break-word;
    white-space: normal;
    hyphens: auto;
  }

  /* Override the highlight box rounding - make it less rounded */
  .toc-item.rounded-t-2xl {
    border-top-left-radius: 0.375rem !important; /* rounded-md instead of rounded-2xl */
    border-top-right-radius: 0.375rem !important;
  }

  .toc-item.rounded-b-2xl {
    border-bottom-left-radius: 0.375rem !important; /* rounded-md instead of rounded-2xl */
    border-bottom-right-radius: 0.375rem !important;
  }

  /* Nested lists styling */
  ol {
    list-style: none;
    padding-left: 0;
    margin: 0;
    width: 100%;
  }
</style>
