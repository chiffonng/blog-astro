---
const { class: className, title } = Astro.props
---

<section class:list={['flex flex-col gap-y-2 md:gap-y-0', className]}>
  {
    title && (
      <div class='text-xl font-semibold'>
        <h2>{title}</h2>
      </div>
    )
  }
  <div class='flex flex-col gap-y-2' id={title ? title.toLowerCase() : ''}>
    <slot />
  </div>
</section>
