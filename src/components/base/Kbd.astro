---
import { keyMap } from '@/lib/constants'
import type { KbdProps as Props } from '@/components/types'

const { keys, class: className } = Astro.props

const classes = [
  'px-1.5 py-0.5 bg-background border border-border rounded text-xs font-mono',
  className
]
---

<kbd class:list={classes}>{keys?.map((key) => keyMap[key])}<slot /></kbd>
