---
import CommonLayout from '@/layouts/CommonLayout.astro'

import * as nowData from 'content/now.md'

const nowDescription =
  "This is a now page, a page that tells you what I am focusing on at this point in my life. Learn more about now pages and browse others at <a href='https://nownownow.com/' class='text-primary hover:underline' target='_blank' rel='noopener'>nownownow.com</a>."
---

<CommonLayout
  title={nowData.frontmatter.title}
  lastUpdated={nowData.frontmatter.lastUpdated}
  description={nowDescription}
>
  <div class='prose max-w-none'>
    <nowData.Content />
  </div>
</CommonLayout>
