---
import { Button } from 'astro-pure/user'
import PageLayout from '@/layouts/BaseLayout.astro'

const meta = {
  description: 'Internal Server Error',
  title: '500'
}
---

<PageLayout {meta}>
  <div class='px-4 py-10 text-center sm:px-6 lg:px-8'>
    <h1 class='block text-7xl font-bold sm:text-9xl'>500</h1>
    <p class='mt-3 text-muted-foreground'>Something went wrong from our server</p>
    <Button title='Back to home' href='/' style='ahead' class='mt-5' />
  </div>
</PageLayout>
